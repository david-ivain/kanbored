{{> header }}
<div class="grid grid-cols-[repeat(4,minmax(100%,1fr))] sm:grid-cols-[repeat(4,minmax(300px,1fr))] gap-2 p-4 overflow-y-hidden overflow-x-auto max-sm:snap-mandatory max-sm:snap-x">
	{{# columns }}
	<div class="flex flex-col overflow-hidden max-sm:snap-center">
		<h2 class="text-lg text-primarytext font-bold uppercase leading-none p-2 border-b-4 border-{{ label }} mb-2">{{ label }}</h2>
		<div class="overflow-auto flex flex-col gap-2">
			{{#issues}}
			<div class="cursor-pointer rounded-lg p-4 bg-lightbg border border-border" role="button">
				<h3 class="text-lg font-bold">{{ name }}</h3>
				<p class="text-secondarytext text-xs before:content-['#']">{{ id }}</p>
				<div class="flex gap-1 mt-1">
					<p class="bg-{{ type }} text-xs text-lightbg px-2 py-1 rounded-full">{{{ type }}}</p>
					<p class="bg-{{ status }} text-xs text-lightbg px-2 py-1 rounded-full">{{{ status }}}</p>
				</div>
				<div class="border-t border-border my-2"></div>
				<p>{{{ description }}}</p>
			</div>
			{{/issues}}
		</div>
	</div>
	{{/ columns }}
</div>
