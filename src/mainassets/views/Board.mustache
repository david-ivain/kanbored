{{> header }}
<div class="flex flex-wrap gap-2 p-4">
	{{#issues}}
	<div class="cursor-pointer grow-0 shrink-0 basis-80 rounded-lg flex flex-col p-4 bg-lightbg border border-border text-sm" role="button">
		<h2 class="text-lg font-bold">{{ name }}</h2>
		<p class="text-secondarytext text-xs before:content-['#']">{{ id }}</p>
		<div class="flex gap-1 mt-1">
			<p class="bg-{{ type }} text-xs text-lightbg px-2 py-1 rounded-full">{{{ type }}}</p>
			<p class="bg-{{ status }} text-xs text-lightbg px-2 py-1 rounded-full">{{{ status }}}</p>
		</div>
		<div class="border-t border-border my-2"></div>
		<p>{{{ description }}}</p>
	</div>
	{{/issues}}
</div>
